{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch Game",
            "type": "f5anything",
            "request": "launch",
            "preLaunchTask": "download-godot",
            "command": "\"${workspaceFolder}/.vscode/scripts/get_engine.sh\" --path \"${workspaceFolder}/src\""
        },
        {
            "name": "Launch Editor",
            "type": "f5anything",
            "request": "launch",
            "preLaunchTask": "download-godot",
            "command": "\"${workspaceFolder}/.vscode/scripts/get_engine.sh\" --path \"${workspaceFolder}/src\" --editor"
        },
        {
            "name": "Launch Web Server",
            "type": "f5anything",
            "request": "launch",
            "preLaunchTask": "export-web",
            "command": "python3 -m http.server 8000 --directory \"${workspaceFolder}/build/web\""
        }
    ]
}
